<div id="product_list">
  <h1>商品一覧</h1>

  <table>
    <% @products.each do |product| %>
    <tr class="<%= cycle('list_line_even', 'list_line_odd') %>">
      <td><%= image_tag product.image_url, :class => 'list_image' %></td>
      <td class="list_description">
        <dl>
          <dt><%= product.title %></dt>
          <dt><%= truncate(strip_tags(product.description), :length => 80) %></dt>
        </dl>
      </td>
      <td class="list_actions">
        <%= link_to t(:show, :default => 'Show', :scope => [:railties, :scaffold]), product %> <br />
        <%= link_to t(:edit, :default => 'Edit', :scope => [:railties, :scaffold]), edit_product_path(product) %><br />
        <%= link_to t(:destroy, :default => 'Destroy', :scope => [:railties, :scaffold]), product,
                    :confirm => t(:are_you_sure, :default => 'Are you sure?', :scope => [:railties, :scaffold]),
                    :method => :delete %><br />
      </td>
    </tr>
    <% end %>
  </table>
</div>

<%= link_to t(:new_product, :default => 'New Product', :scope => [:railties, :scaffold]), new_product_path %>
